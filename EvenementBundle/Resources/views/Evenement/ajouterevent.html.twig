{% extends '::base_admin.html.twig' %}
{% block fos_user_content %}

    <section class="content">
        <div class="row">
            <div class="col-md-4">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Créer un event</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" method="post" enctype="multipart/form-data">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Nom:</label>
                                <input type="text" name="nom" class="form-control" id="" placeholder="titre de l'evenement">
                            </div>
                            <div class="form-group">
                                <label>Catégorie:</label>
                                <select name="categorie" class="form-control">
                                    <option>Party</option>
                                    <option>Education</option>
                                    <option>Sport</option>
                                    <option>Autre</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>description:</label>
                                <input class="form-control" name="description" rows="3" placeholder=""></input>
                            </div>
                            <div class="form-group">
                                <label>prix:</label>
                                <input class="form-control" name="prix" rows="3" placeholder=""></input>
                            </div>

                            <div class="form-group">
                                <label>adresse:</label>
                                <input class="form-control" name="adresse" rows="3" placeholder=""></input>
                            </div>

                            <div class="form-group">
                                <label>organisateur:</label>
                                <input class="form-control" name="organisateur" rows="3" placeholder=""></input>
                            </div>

                            <div class="form-group">
                                <label>email:</label>
                                <input class="form-control" name="email" rows="3" placeholder=" "></input>
                            </div>

                            <div class="form-group">
                                <label>date_debut:</label>
                                <input class="form-control" type="datetime-local" name="date_deb" rows="3" placeholder=""/>
                            </div>

                            <div class="form-group">
                                <label>date_fin:</label>
                                <input class="form-control" type="datetime-local" name="date_fin" rows="3" placeholder=""/>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail1">Image:</label>
                                <input type="file" name="imgevent" class="form-control" id="" >
                            </div>



                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Ajouter</button>
                        </div>
                    </form>
                </div>
            </div>



        </div>
    </section>

{% endblock %}