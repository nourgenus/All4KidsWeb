{% extends 'base_parent.html.twig' %}
{% block fos_user_content %}

    <div id="topOfPage" class="topTabsWrap">
        <div class="main">
            <div class="speedBar">
                <a class="home" href="#">Accueil</a>
                <span class="breadcrumbs_delimiter">
							<i class="icon-right-open-mini"></i>
						</span>
                <a class="all" href="#">Produits</a>
                <span class="breadcrumbs_delimiter">
							<i class="icon-right-open-mini"></i>
						</span>
                <span class="current">Liste des produits</span>
            </div>
            <h3 class="pageTitle h3">Liste des produits</h3>
        </div>
    </div>

    <div class="mainWrap without_sidebar">
        <div class="main">
            <div class="content">

                <section class="no_margin no_padding">
                    <div class="container">
                        <div class="masonryWrap">
                            <div class="isotopeFiltr">
                                <ul>
                                    <li class="squareButton active">
                                        <a href="#" data-filter="*">tous les produits</a>
                                    </li>
                                    <li class="squareButton">
                                        <a href="#"  data-filter=".flt_71">Vetements</a>
                                    </li>
                                    <li class="squareButton">
                                        <a href="#" data-filter=".flt_66">Meubles</a>
                                    </li>
                                    <li class="squareButton">
                                        <a href="#" data-filter=".flt_61">Accessoires</a>
                                    </li>
                                    <li class="squareButton">
                                        <a href="#" data-filter=".flt_64">Autre..</a>
                                    </li>

                                </ul>
                            </div>
                            <div class="columns1_4 sc_column_item sc_column_item_4 even">
                                <ul>
                                    <li class="squareButton light ico" style="margin-left: 300px;">
                                        <div class="sc_button sc_button_style_global sc_button_size_medium squareButton global medium">
                                            {% if app.user %}
                                                <a href="{{ path('mesproduits') }}" class="" style="margin-left: 800px;">Mes produits</a>

                                                <a href="{{ path('ajouterproduit') }}" class="" style="margin-left: 800px;">Ajouter</a></br>
                                            {% endif %}
                                            <a href="{{ path('trieproduitprix') }}" class="" style="margin-left: 800px;">Prix</a>

                                        </div>
                                    </li>
                                </ul>
                            </div>
                            </br>
                            </br>
                            </br>
                            </br>

                            <section id="genus" class="masonry isotope inited" data-columns="4" style="position: relative; height: 1441.92px;">
                                {% for produit in produits %}
                                    {% if produit.categorie == "Vetement" %}
                                        <article class="isotopeElement post_format_standard odd flt_71 isotopeElementShow" style="width: 300px; position: absolute; left: 0px; top: 0px; opacity: 1;">

                                            <div class="isotopePadding">
                                                <div class="squareButton light">
                                                    <a href="{{ path('supprimerproduit',{'id':produit.id}) }}" class="sc_icon theme_accent">X</a>
                                                </div>
                                                <div class="thumb hoverIncrease inited" data-image="images/1317x2000.png" data-title="Summer Childcare Questions">
                                                    <img alt="Summer Childcare Questions" src="{{ asset('images/produits/'~produit.id~'_'~produit.parent.id~'.png') }}" id="imgproduit">
                                                    <span class="hoverShadow"></span><a href="{{ asset('images/produits/'~produit.id~'_'~produit.parent.id~'.png') }}" title="Summer Childcare Questions" rel="prettyPhoto[slideshow]" class="inited"><span class="hoverIcon"></span></a></div>

                                                <h4>
                                                    <a href="#">{{ produit.nom }}</a>

                                                </h4>

                                                <p>{{ produit.description[:50] }} (...)</p>


                                                <div class="masonryMore inited">
                                                    <ul>
                                                        <li class="squareButton light ico">
                                                            <div class="sc_button sc_button_style_global sc_button_size_medium squareButton global medium">
                                                                <a href="{{ path('editproduitseul',{'id':produit.id}) }}" class="">Edit Produit</a>
                                                            </div>
                                                        </li>

                                                        <li class="squareButton light ico likeButton like" data-postid="806" data-likes="0" data-title-like="Like" data-title-dislike="Dislike">
                                                            <a class="icon-money" title="Like - 0" >
                                                                <span class="">{{ produit.prix }}</span>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                                <span class="inlineShadow"></span>
                                            </div>
                                        </article>
                                    {% endif %}
                                    {% if produit.categorie == "Meuble" %}
                                        <article class="isotopeElement post_format_standard odd flt_66 isotopeElementShow" style="width: 300px; position: absolute; left: 0px; top: 0px; opacity: 1;">

