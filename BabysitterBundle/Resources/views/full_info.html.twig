{% extends '::base_admin.html.twig' %}

{% block script %}

{% endblock %}

{% block fos_user_content %}
    <section class="content">

        <div class="row">
            <div class="col-md-3">
                <div class="box box-primary">
                    <div class="box-body box-profile">
                        {% if(file_exist('C:/Program Files (x86)/EasyPHP-Devserver-16.1/eds-www/all4kids/web/images/babysitter/'~babysitters.username~'_'~babysitters.id~'.png')) %}
                            {% set imagePath = 'images/babysitter/'~babysitters.username~'_'~babysitters.id~'.png' %}
                        {% else %}
                            {% set imagePath = 'images/babysitter/inconnu.png' %}
                        {% endif %}
                        <img class="profile-user-img img-responsive img-circle" src="{{ asset(imagePath)}}" alt="User profile picture" style="height: 100px;width: 100px;border-radius: 50%;">

                        <h3 class="profile-username text-center">{{ babysitters.nom }}&nbsp;{{ babysitters.prenom }}</h3>

                        <p class="text-muted text-center">{{ babysitters.email }}</p>

                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>Date naissance</b> <a class="pull-right">{{ babysitters.dateNaissance|date("d/m/Y") }}</a>
                            </li>
                            <li class="list-group-item">
                                <b>Téléphone</b> <a class="pull-right">{{ babysitters.tel }}</a>
                            </li>
                            <li class="list-group-item">
                                <b>Salaire en DT</b> <a class="pull-right">{{ babysitters.salaire }}</a>
                            </li>
                        </ul>

                        {% if babysitters.enabled %}
                            <a href="{{path ('desactiver',{'id':babysitters.id})}}" class="btn btn-primary btn-block btn-danger"><b>désactiver le compte</b></a>
                        {% else %}
                            <a href="{{path ('activer',{'id':babysitters.id})}}" class="btn btn-primary btn-block btn-success"><b>activer le compte</b></a>
                        {% endif %}
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>

            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">About Babysitter</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <strong><i class="fa fa-user margin-r-5"></i> Login</strong>

                        <p class="text-muted">
                            {{ babysitters.username }}
                        </p>

                        <hr>

                        <strong><i class="fa fa-map-marker margin-r-5"></i> Adresse</strong>

                        <p class="text-muted">{{ babysitters.adresse }}</p>

                        <hr>

                        <strong><i class="fa fa-list-alt margin-r-5"></i> C.I.N</strong>

                        <p class="text-muted">{{ babysitters.cin }}</p>

                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </section>

{% endblock %}

