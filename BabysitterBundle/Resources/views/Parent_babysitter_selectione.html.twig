{% extends '::base_parent.html.twig' %}
{% block fos_user_content %}
    <div id="topOfPage" class="topTabsWrap">
        <div class="main">
            <div class="speedBar">
                <a class="home" href="{{ asset('dashboard_parent') }}">Accueil</a>
                <span class="breadcrumbs_delimiter">
              <i class="icon-right-open-mini"></i>
            </span>
                <a class="all" href="{{ asset('parent_babysitter_list') }}">Babysitters</a>
                <span class="breadcrumbs_delimiter">
              <i class="icon-right-open-mini"></i>
            </span>
                <span class="current">Babysitter selectionné</span>
            </div>
            <h3 class="pageTitle h3">Babysitter selectionné</h3>
        </div>
    </div>

    <div class="mainWrap with_sidebar">
        <div class="main">
            <div class="content">
                <section class="no_margin no_padding">
                    <div class="container">
                        <div class="masonryWrap">
                            <div class="" style="text-align: center;">
                                <ul>
                                    <li class="squareButton">
                                        <a href="{{ path('parent_babysitter_list') }}">Tous les babysitters</a>
                                    </li>
                                    <li class="squareButton">
                                        <a href="{{ path('babysitter_near_to_parent',{'id': app.user.id }) }}" data-filter=".flt_71">Près de moi</a>
                                    </li>
                                    <li class="squareButton">
                                        <a href="{{ path('conversations') }}" data-filter=".flt_66">Mes messages
                                            {% set countUnread = count_unread_conversations(app.user) %}

                                            {% if countUnread > 0 %}
                                                <strong>({{ countUnread }} new)</strong>
                                            {% endif %}
                                        </a>
                                    </li>
                                    <li class="squareButton">
                                        <a href="{{ path('reserver_babysitter') }}" data-filter=".flt_66">Réserver</a>
                                    </li>
                                    <li class="squareButton">
                                        <a href="{{ path('parent_reservations',{'id': app.user.id }) }}" data-filter=".flt_66">Mes réservations</a>
                                    </li>
                                </ul>
                            </div>
                            <section class="masonry isotope inited" data-columns="1" style="position: relative; height: 3981.19px;">
                                <article class="isotopeElement post_format_standard odd flt_71 flt_66 flt_61 isotopeElementShow" style="opacity: 1; width: 450px; position: absolute; left: 0px; top: 0px;">
                                    <div class="isotopePadding">
                                        <div class="thumb hoverIncrease inited" data-image="{{ asset('user/images/1317x2000.png') }}">
                                            {% if(file_exist('C:/Program Files (x86)/EasyPHP-Devserver-16.1/eds-www/all4kids/web/images/babysitter/'~babysitters.username~'_'~babysitters.id~'.png')) %}
                                                {% set imagePath = 'images/babysitter/'~babysitters.username~'_'~babysitters.id~'.png' %}
                                            {% else %}
                                                {% set imagePath = 'images/babysitter/inconnu.png' %}
                                            {% endif %}
                                            <img src="{{ asset(imagePath) }}">
                                            <span class="hoverShadow"></span><a href="{{ asset(imagePath) }}" ><span class="hoverIcon"></span></a></div>
                                    </div>
                                    <span class="inlineShadow"></span><br>
                                    <div class="sc_button sc_button_style_global sc_button_size_mini squareButton fullSize global mini  ico margin_bottom_mini" style="width: 90%"> <a href="{{ path('form_start_message',{'id': babysitters.id , 'page': 1}) }}" class="">Contacter</a> </div>
                                </article>
                                <article class="isotopeElement post_format_standard odd flt_71 flt_66 flt_61 isotopeElementShow" style="opacity: 1; width: 450px; position: absolute; left: 0px; top: 0px;">
                                    <h2>{{ babysitters.nom }}&nbsp;{{ babysitters.prenom }}</h2>
                                    <table>
                                        <tr>
                                            <td><h5>Date de naissance:</h5></td>
                                            <td>{{ babysitters.dateNaissance|date("d/m/Y") }}</td>
                                        </tr>
                                        <tr>
                                            <td><h5>Email:</h5></td>
                                            <td>{{ babysitters.email }}</td>
                                        </tr>
                                        <tr>
                                            <td><h5>Adresse:</h5></td>
                                            <td>{{ babysitters.adresse }}</td>
                                        </tr>
                                        <tr>
                                            <td><h5>C.I.N:</h5></td>
                                            <td>{{ babysitters.cin }}</td>
                                        </tr>
                                    </table>
                                </article>
                            </section>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
{% endblock %}